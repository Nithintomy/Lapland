<%- include('header') %>


 <!-- Form Start -->
                  
 <div class="container-fluid pt-4 px-4">
  <div class="row g-4 align-items-center justify-content-center mt-5">
    <div class="col-sm-12 col-xl-6">
      <div class="bg-secondary rounded h-100 p-4">
        <h6 class="mb-4">Add Banner</h6>
        <div>
          <% if(locals.msg) { %>
            <div id="msg" class="alert alert-success"><%- locals.msg -%></div>
            <%}%>
        </div>
        <form action="/add_banner" id="update_banner" name="basic" method="post" enctype="multipart/form-data">
          <div class="mb-3">
            <label for="name">Banner Title  </label>
            <input id="name" name="title" type="text" class="form-control validate" required />
          </div>
          <div class="mb-3"><label for="price"  >Sub title  </label>  
          <input id="int" name="subtitle" type="String" class="form-control validate " required />
          </div>
          <div class="mb-3">
            <label for="link">Banner link</label>
            <input id="link" name="link" type="text" class="form-control validate" required />
          </div>
          
          
          
          <div class="tm-product-img-dummy mx-auto">
            <i
              class="fas fa-cloud-upload-alt tm-upload-icon"
              onclick="document.getElementById('fileInput').click();"
            ></i>
          </div>
          <div class="form-group mt-3">
            <label for="exampleInputPassword1" class="form-label">Image</label>
            <input
              type="file"
              class="form-control"
              name="image"
              multiple
            
            />
               </div>


          <button type="submit" class="btn btn-primary mt-5">
            Add Banner
          </button>
        </form>
      </div>
    </div>
  </div>
</div>
<!-- Form End -->

            
<script>
  setTimeout(() => {

      document.getElementById('msg').style.display="none"
      
  }, 3000);
</script>

<%- include('footer') %>