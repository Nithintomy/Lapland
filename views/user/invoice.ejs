<body>
    <style>
        body{margin-top:20px;
background-color:#eee;
}

.card {
    box-shadow: 0 20px 27px 0 rgb(0 0 0 / 5%);
}
.card {
    position: relative;
    display: flex;
    flex-direction: column;
    min-width: 0;
    word-wrap: break-word;
    background-color: #fff;
    background-clip: border-box;
    border: 0 solid rgba(0,0,0,.125);
    border-radius: 1rem;
  
}
.float-end{
    float: right; 
    }
    </style>
 

<div class="container">
<div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div id="invoice" class="card-body">
                    <div class="d-print-none mt-4">
                        <div class="float-end">
                            <!-- <a href=""  id="download-button" class="btn btn-success me-1"><i class="fa fa-print"></i></a> -->
                            <button type="button" id="download-button">Download</button>
                        </div>
                    </div>
                    <div class="invoice-title">
                        <h4 class="float font-size-15">Invoice  <span class="badge bg-success font-size-12 ms-2">Paid</span></h4>
                        <div class="mb-4">
                           <h2 class="mb-1 text-warning">LAP LAND</h2>
                        </div>
                        <div class="text-muted">
                            <p class="mb-1"> 237/109, HAL Old Airport Rd, Chowdeshwari Layout, Marathahalli Village,
                                 Marathahalli, Bengaluru, Karnataka 5600371</p>
                            <p class="mb-1"><i class="uil uil-envelope-alt me-1"></i>lapland@gmail.com</p>
                            <p><i class="uil uil-phone me-1"></i> +91 8281024176</p>
                        </div>
                    </div>

                    <hr class="my-4">
                    <% order_data.items.forEach(function(items,index) { %>
                        
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="text-muted">
                                <h5 class="font-size-16 mb-3">Billed To:</h5>
                                <h5 class="font-size-15 mb-2"> <%= order_data.user.name %> </h5>
                                <p class="mb-1"><%= order_data.address.address %></p>
                                <p class="mb-1"><%= order_data.address.email %></p>
                                <p><%= order_data.address.phone %></p>
                            </div>
                        </div>
                        <!-- end col -->
                        <div class="col-sm-6">
                            <div class="text-muted text-sm-end">
                                <div>
                                    <h5 class="font-size-15 mb-1">Invoice ID:</h5>
                                    <p id="invoiceId">#</p>
                                </div>
                                <div class="mt-4">
                                    <h5 class="font-size-15 mb-1">Invoice Date:</h5>
                                    <p><%= order_data.createdAt.toLocaleDateString() %> </p>
                                </div>
                                <div class="mt-4">
                                    <h5 class="font-size-15 mb-1">Order No:</h5>
                                    <p>#<%= order_data._id %></p>
                                </div>
                            </div>
                        </div>
                        <!-- end col -->
                    </div>
                    <!-- end row -->
                    
                    <div class="py-2">
                        <h5 class="font-size-15">Order Summary</h5>

                        <div class="table-responsive">
                            <table class="table align-middle table-nowrap table-centered mb-0">
                                <thead>
                                    <tr>
                                        <th style="width: 70px;">No.</th>
                                        <th>Product image</th>
                                        <th>Item</th>
                                        <th>Quantity</th>
                                        <th class="text-end" style="width: 120px;">Total</th>
                                    </tr>
                                </thead><!-- end thead -->
                                <tbody>
                                    <tr>
                                        <th scope="row"><%= index+1 %></th>
                                        <td>
                                            <img src="/<%= items.product.photo[0] %>" class="img-thumbnail" width="60px" alt=""> 
                                        </td>
                                        <td>
                                            <div>
                                                <h5 class="text-truncate font-size-14 mb-1"><%= items.product.name %></h5>
                                                <p class="text-muted mb-0"><%-items.product.details %></p>
                                            </div>
                                        </td>
                                        
                                        <td> <%= items.quantity %></td>
                                        <td class="text-end">₹<%= items.price %></td>
                                    </tr>
                                    <!-- end tr -->
                                   
                                    <div>
                                        <tr>
                                            
                                            
                                            <th scope="row" colspan="4" class="text-end">Sub Total</th>
                                            <td class="text-end">₹<%= items.price * items.quantity %></td>
                                          </tr>
                                          <!-- end tr -->
                                    <tr>
                                        <th scope="row" colspan="4" class="border-0 text-end">
                                            Shipping Charge : </th>
                                        <td class="border-0 text-end">₹<%= order_data.shipping_charge %></td>
                                    </tr>
                                    <!-- <tr>
                                        <th scope="row" colspan="4" class="border-0 text-end">
                                            Discount : </th>
                                        <td class="border-0 text-end"></td>
                                    </tr> -->

                                    <tr>
                                        <th scope="row" colspan="4" class="border-0 text-end">Total</th>
                                        <td class="border-0 text-end"><h4 class="m-0 fw-semibold">₹<%= order_data.total %> </h4></td>
                                    </tr>
                                </div>


                                </tbody><!-- end tbody -->
                            </table><!-- end table -->
                        </div><!-- end table responsive -->
                       
                    </div>
                    <% }) %>
                </div>
            </div>
        </div><!-- end col -->
    </div>
</div>

<script>
    const button = document.getElementById('download-button');

    function generatePDF() {
        // Choose the element that your content will be rendered to.
        const element = document.getElementById('invoice');
        console.log(element,"bdbbdbdb")
        // Choose the element and save the PDF for your user.
        html2pdf().from(element).save();
    }

    button.addEventListener('click', generatePDF);

    function export_data() {
        let data = document.getElementById('invoice');
        var fp = XLSX.utils.table_to_book(data, { sheet: 'arjun' });
        XLSX.write(fp, {
            bookType: 'xlsx',
            type: 'base64'
        });
        XLSX.writeFile(fp, 'test.xlsx');
 }
 
</script>
<script>
    // Generate a random invoice ID
    function generateInvoiceId() {
        const characters = 'ABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789';
        let invoiceId = '';
        for (let i = 0; i < 6; i++) {
            invoiceId += characters.charAt(Math.floor(Math.random() * characters.length));
        }
        return invoiceId;
    }

    // Set the random invoice ID on page load
    document.addEventListener('DOMContentLoaded', function() {
        const invoiceIdElement = document.getElementById('invoiceId');
        invoiceIdElement.textContent = generateInvoiceId();
    });
</script>








