.delivery-address-box {
  background-color: #f2c94c; 
  padding: 2px;
  width: 80%;
  border-radius: 5px;
}

.bg-custom-color {
  background-color: #f2c94c; 
  padding: 2px;
  border-radius: 50%;
}
.btn-custom-primary {
  background-color: #FF0000; 
  color: #FFFFFF; 
  border-radius: 0; 
 
}

.btn-custom-danger {
  background-color: #000000; 
  color: #FFFFFF; 
  border-radius: 0; 
  
}

.delete-icon {
  font-size: 16px; 
  
}



.water-flow {
  position: relative;
  overflow: hidden;

}
.water-flow:hover {
  cursor: pointer;
}


.button-text {
  position: relative;
  z-index: 1;
}

.water-flow:before {
  content: "";
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: -100%;
  background-image: linear-gradient(to right, #a0a0f1 0%, #9b9bf1 100%);
  opacity: 0;
  transform: translateX(-100%);
  animation: waterFlow 2s infinite;
  transition: opacity 0.3s;
}

.water-flow:hover {
  background-color: transparent;
}

.water-flow:hover:before {
  opacity: 1;
}

.water-flow:hover .button-text {
  color: white;
}

@keyframes waterFlow {
  0% {
    transform: translateX(-100%);
  }
  100% {
    transform: translateX(100%);
  }
}


</style>

<section class="ftco-section">
