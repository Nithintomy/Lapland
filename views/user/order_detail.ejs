<%- include('header') %>



<a href="/invoice/<%=order_data._id%>" type="submit" class="btn "> Download Invoice</a>
  <!-- Widgets Start -->
  <div class="container-fluid orderdetaibg pt-4 px-4">
    <div class="row g-4">
        <div class="col-sm-12 col-md-6 col-xl-12">
            <div class="h-100 bg-dark text-white rounded p-4">
                <div class="d-flex align-items-center justify-content-between mb-2">
                    <h3 class="mb-0 text-success">Products Details</h3>
                </div>
                <div class="table-responsive">
                    <table class="table">
                        <thead class="orderhead">
                            <tr>
                                <th scope="col">No:</th>
                                <th scope="col">Product Name</th>
                                <th scope="col">quantity</th>
                                <th scope="col">Price</th>
                                <th scope="col">Image</th>
                                
                            </tr>
                        </thead>
                        <tbody class="ordertable">
                            <% order_data.items.forEach(function(items,index) { %>
                            <tr>
                    
                                <td><%= index+1 %></td>

                                <td >
                                    <%= items.product.name %>
                                </td>
                                     
                                <td>
                                        <%= items.quantity %> <br>
                                </td>
                                <td>
                                     ₹<%= items.price %>
                                </td>
                                <td>
                                    <img src="/<%= items.product.photo[0] %>" class="img-thumbnail" width="60px" alt=""> 
                                </td>
                              </tr>
                              <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        

    </div>
    <br>
    <br>
    <div class="col-sm-12 col-md-6 col-xl-12">
        <div class="h-100 bg-dark text-white rounded p-4">
            <div class="d-flex align-items-center justify-content-between mb-4">
                <h3 class="mb-0 text-success ">Order Details</h3>
            </div>
            <div class="orderadd ">
                <ul class="addreul">
                    <li><h6>Customer Name: <span> <%= order_data.user.name %>  </span> </h6></li>
                    <li><h6>Ordered Date: <span> <%= order_data.createdAt.toLocaleDateString() %>  </span> </h6> </li>
                    <li><h6>Ordered Status: <span> <%= order_data.status %>  </span> </h6> </li>
                    <li><h6>Total Price: <span> ₹<%= order_data.total %>  </span> </h6> </li>
                    <li><h6>Payment Method: <span> <%= order_data.payment_method %>  </span> </h6> </li>
                </ul>
            </div>
              <p class="text-primary">Billing Address</p>
            <div class="orderadd ">
                <ul class="payment_address">
                    <li>Fullname: <span><%= order_data.address.name %> </span></li>       
                    <li>Address: <span><%= order_data.address.address %> </span></li>       
                    <li>Phone No: <span><%= order_data.address.phone %> </span></li>       
                    <li>Pincode: <span><%= order_data.address.pincode %> </span></li>       
                    <li>City: <span><%= order_data.address.city %> </span></li>       
                    <li>Email: <span><%= order_data.address.email %> </span></li>       
                </ul>
            </div>
            <div id="calender"></div>
        </div>
    </div>
   
</div>

<!-- Widgets End -->
<%- include('footer') %>
